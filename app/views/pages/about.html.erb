<%= render 'shared/smallbanner', title: @resume.title, subtitle: "Découvrez mon parcours professionnel." %>
<div class="cv-container">
  <div class="cv-description">
    <p><%= @resume.description[0] %></p>
    <p><%= @resume.description[1] %></p>
  </div>
  <div class="cv-download">
    <%= image_tag url_for(@resume.picture), alt: "Image du CV" %>
    <%# bouton pour telecharger cv %>
    <%= link_to "Télécharger/Imprimer mon CV", url_for(@resume.pdf), class: "button-download", download: true %>
  </div>
</div>

<section class="section-education">
  <h2>Éducation</h2>
  <div class="education-container">
    <% @resume.educations.each do |education| %>
      <div class="education-item">
        <%# Affichage du logo via cloudinary %>
        <%= image_tag education.logo, alt: "Logo de l'école", class: "logo" %>

        <h3><%= education.diploma_name %></h3>
        <p><%= education.institution_name %></p>
        <p class="education-date"><%= education.start_date.strftime("%Y") %> - <%= education.end_date.strftime("%Y") %></p>
      </div>
    <% end %>
  </div>
</section>


<div class="experience">
  <h2>Expérience</h2>
  <% @resume.experiences.each do |experience| %>
    <div class="experience-item">
      <h3><%= experience.job_title %> - <%= experience.company_name %></h3>
      <p><%= experience.start_date.strftime("%Y") %> - <%= experience.end_date.strftime("%Y") %></p>
    </div>
  <% end %>
</div>
