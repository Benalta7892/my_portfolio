<section class="section-skills">
  <div class="skills-content">

    <div class="front-end">
      <h2><span>S</span>tack Front-End</h2>
      <div class="logos">
        <% @project.frontend_technologies.each do |tech| %>
          <div data-controller="popover" data-action="mouseenter->popover#show mouseleave->popover#hide">
            <%= link_to image_tag(tech["url"], alt: tech["name"], class: "tech-logo", width: 100, height: 100), tech["link"], target: "_blank", data: { turbo: false } %>
            <template data-popover-target="content">
              <div data-popover-target="card" class="popover-content">
                <p><%= tech["name"] %></p>
              </div>
            </template>
          </div>
        <% end %>
      </div>
    </div>

    <div class="back-end">
      <h2><span>S</span>tack Back-End</h2>
      <div class="logos">
        <% @project.backend_technologies.each do |tech| %>
          <div data-controller="popover" data-action="mouseenter->popover#show mouseleave->popover#hide">
            <%= link_to image_tag(tech["url"], alt: tech["name"], class: "tech-logo", width: 100, height: 100), tech["link"], target: "_blank", data: { turbo: false } %>
            <template data-popover-target="content">
              <div data-popover-target="card" class="popover-content">
                <p><%= tech["name"] %></p>
              </div>
            </template>
          </div>
        <% end %>
      </div>
    </div>

    <div class="outils">
      <h2><span>O</span>utils</h2>
      <div class="logos">
        <% @project.tools.each do |tech| %>
          <div data-controller="popover" data-action="mouseenter->popover#show mouseleave->popover#hide">
            <%= link_to image_tag(tech["url"], alt: tech["name"], class: "tech-logo", width: 100, height: 100), tech["link"], target: "_blank", data: { turbo: false } %>
            <template data-popover-target="content">
              <div data-popover-target="card" class="popover-content">
                <p><%= tech["name"] %></p>
              </div>
            </template>
          </div>
        <% end %>
      </div>
    </div>


  </div>
</section>


