<section class="section-swiper" id="first-section">
  <h2><%= @project.title %></h2>


  <div class="carousel-swiper">
    <div class="btn-carousel-prev">
      <%= cl_image_tag "arrowL_y08p76", class: "custom-arrow",  alt: 'Fl√®che de gauche' %>
    </div>


    <div class="swiper-container">
      <div data-controller="swiper" style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper mySwiper2">
        <div class="swiper-wrapper">
          <% @project.pictures.each do |picture| %>
            <div class="swiper-slide">
              <%= image_tag picture %>
            </div>
          <% end %>
        </div>
      </div>


      <div thumbsSlider="" class="swiper mySwiper">
        <div class="swiper-wrapper">
          <% @project.pictures.each do |picture| %>
            <div class="swiper-slide">
              <%= image_tag picture, class: "little-img-carousel" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>


    <div class="btn-carousel-next">
      <%= cl_image_tag "arrowR_v3vouj", class: "custom-arrow",  alt: 'Fl√®che de droite' %>
    </div>
  </div>


  <div class="link-github">
    <% if @project.link.present? %>
      <%= link_to "üîó Lien GitHub.", @project.link, target: "_blank" %>
    <% end %>
  </div>

</section>


<section class="section-details-container">
  <%# <h2>D√©tails du projet</h2> %>

  <div class="details-items">

    <div class="description">
      <p><%= @project.description %></p>
    </div>

    <div class="barre"></div>

    <div class="features">
      <ul>
        <% @project.features.each do |feature| %>
          <li>
            <p><%= feature %></p>
          </li>
        <% end %>
      </ul>
    </div>

  </div>

  <div class="dev-count">
    <p>Projet d'√©quipe de  <%= @project.dev_count %> d√©veloppeurs.</p>
  </div>

</section>


