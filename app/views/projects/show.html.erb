<%= render 'shared/smallbanner', title: @project.title, subtitle: "Application web de location." %>


<section class="section-swiper">


  <div class="btn-carousel-prev">
    <%= cl_image_tag "arrowL_y08p76", class: "custom-arrow",  alt: 'Flèche de gauche' %>
  </div>


  <div class="swiper-container">
    <div data-controller="swiper" style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper mySwiper2">
      <div class="swiper-wrapper">
        <% @project.pictures.each do |picture| %>
          <div class="swiper-slide">
            <%= image_tag picture %>
          </div>
        <% end %>
      </div>
    </div>


    <div thumbsSlider="" class="swiper mySwiper">
      <div class="swiper-wrapper">
        <% @project.pictures.each do |picture| %>
          <div class="swiper-slide">
            <%= image_tag picture %>
          </div>
        <% end %>
      </div>
    </div>
  </div>


  <div class="btn-carousel-next">
    <%= cl_image_tag "arrowR_v3vouj", class: "custom-arrow",  alt: 'Flèche de droite' %>
  </div>


</section>


<div class="container my-5">
  <!-- Carte du projet -->
  <div class="card">
    <div class="card-body">
      <h2 class="card-title">Détails du projet</h2>
      <p class="card-text"><%= @project.description %></p>

      <!-- Liste des fonctionnalités -->
      <ul class="list-group list-group-flush mb-3">
        <% @project.features.each do |feature| %>
          <li class="list-group-item"><%= feature %></li>
        <% end %>
      </ul>

      <!-- Nombre de developpeurs -->
      <p class="card-text">Projet d'équipe de  <%= @project.dev_count %> développeurs.</p>

      <!-- Technologies utilisées -->
      <h3>Technologies utilisées</h3>
      <div class="row">
        <!-- Technologies Front-End -->
        <div class="col-6">
          <h4>Front-End</h4>
          <div class="logos d-flex flex-wrap justify-content-start">
            <% @project.frontend_technologies.each do |tech_url| %>
              <%= image_tag tech_url, alt: "Logo technologie", class: "tech-logo", style: "width: 50px; margin: 5px;" %>
            <% end %>
          </div>
        </div>

        <!-- Technologies Back-End -->
        <div class="col-6">
          <h4>Back-End</h4>
          <div class="logos d-flex flex-wrap justify-content-start">
            <% @project.backend_technologies.each do |tech_url| %>
              <%= image_tag tech_url, alt: "Logo technologie", class: "tech-logo", style: "width: 50px; margin: 5px;" %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Lien vers le projet -->
      <div class="mt-4">
        <% if @project.link.present? %>
          <%= link_to "Voir le projet", @project.link, target: "_blank", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


