<section class="section-contact">
  <h2>Formulaire de contact</h2>

  <div class="form-contact">
    <%= form_with model: @contact, url: contacts_path, local: true, html: { class: "custom-form" } do |form| %>
      <div class="contact-row">
        <div class="contact-input">
          <%#= form.label :last_name, "Nom" %>
          <%= form.text_field :last_name, placeholder: "Votre nom", required: true %>
        </div>

        <div class="contact-input">
          <%#= form.label :email, "Adresse email" %>
          <%= form.email_field :email, placeholder: "Adresse email", required: true %>
        </div>
      </div>


      <div class="contact-input">
        <%#= form.label :message, "Message" %>
        <%= form.text_area :message, placeholder: "Votre message", class: "textarea", required: true %>
      </div>

      <div class="btn">
        <%= form.submit "Envoyer" %>
      </div>
    <% end %>
  </div>


</section>


<div class="footer">
  <div class="footer-links">
    <%= link_to "https://www.linkedin.com/in/benalta7892", target: "_blank" do %>
      <i class="fab fa-linkedin"></i>
    <% end %>

    <%= link_to "https://github.com/benalta7892", target: "_blank" do %>
      <i class="fab fa-github"></i>
    <% end %>

    <%# <a href="#"><i class="fab fa-instagram"></i></a> %>
  </div>
  <div class="footer-copyright">
    <p>Localisation : Paris</p>
  </div>
</div>
